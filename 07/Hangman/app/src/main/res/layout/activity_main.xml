<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.kornel_ius.hangman.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="Q" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="W" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="E" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="R" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="T" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="Y" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="U" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="I" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="O" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="P" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="A" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="S" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="D" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="F" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="G" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="H" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="J" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="K" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="L" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="Z" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="C" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="V" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="B" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="N" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="U" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="letterPress"
                android:text="M" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

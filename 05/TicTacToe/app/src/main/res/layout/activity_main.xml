<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.kornel_ius.tictactoe.MainActivity">

    <TextView
        android:id="@+id/moveInformationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="132dp"
        android:background="@color/dark"
        android:gravity="center"
        android:text="Move: X"
        android:textColor="@color/cream"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0x0"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="0"
                android:textColor="@color/dark"
                android:textSize="64sp" />

            <Button
                android:id="@+id/button0x1"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="1"
                android:textColor="@color/dark"
                android:textSize="64sp" />

            <Button
                android:id="@+id/button0x2"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="2"
                android:textColor="@color/dark"
                android:textSize="64sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1x0"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="3"
                android:textColor="@color/dark"
                android:textSize="64sp" />

            <Button
                android:id="@+id/button1x1"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="4"
                android:textColor="@color/dark"
                android:textSize="64sp" />

            <Button
                android:id="@+id/button1x2"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="5"
                android:textColor="@color/dark"
                android:textSize="64sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2x0"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="6"
                android:textColor="@color/dark"
                android:textSize="64sp" />

            <Button
                android:id="@+id/button2x1"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="7"
                android:textColor="@color/dark"
                android:textSize="64sp" />

            <Button
                android:id="@+id/button2x2"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="1dp"
                android:background="@color/cream"
                android:onClick="fieldClick"
                android:tag="8"
                android:textColor="@color/dark"
                android:textSize="64sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
